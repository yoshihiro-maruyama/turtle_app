<div class="container">
  <h1>Micropost</h3>
  
  <%= link_to gravatar_for(@micropost.user, size: 50)%>
  <% if !current_user?(@micropost.user) %>
  <div>
   <%= render 'likes/like', post: @micropost %>
  </div>
  <% end %>
  <div class="image-wrapper">
    <%= image_tag @micropost.display_image if @micropost.image.attached? %>
    <div class="content"><%= @micropost.content %></div>
    <span class="timestamp">
      Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
    </span>
      <% if current_user?(@micropost.user) %>
      <%= link_to "delete", @micropost, method: :delete,
                                        data: { confirm: "You sure?" } %>
      <% end %>
  </div>
  
  
  <div class="comment-wrapper">
    <%= form_with(model: [@micropost, @comment], method: :post) do |f| %>
      <%= f.text_field :content %>
      <% f.hidden_field :micropost_id, value: @micropost.id %>
      <%= f.submit 'comment' %>
    <% end %>
    <% @comments.each do |comment| %>
      <div class="comment">
      <%= link_to gravatar_for(@comment.user, size: 20)%><%= comment.content %>
      </div>
    <% end %>
  </div>
</div>