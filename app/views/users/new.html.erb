<% provide(:title, 'Sign up') %>

<div class="users-new-wrapper">
<div class="new-form-wrapper">
<h1>Sign up</h1>
  <div class="form-content">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %><span>(※must be filled)</span>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :user_name, "User name" %>
      <%= f.text_field :user_name, class: 'form-control' %>

      <%= f.label :email %><span>(※must be filled)</span>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %><span>(※must be filled)</span>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %><span>(※must be filled)</span>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <div class="gender-label">
      <%= f.label :gender, "male", class: "gender-label" %>
      </div>
      <%= f.radio_button :gender, "male" %>

      <div class="gender-label">
      <%= f.label :gender, "female", class: "gender-label" %>
      </div>
      <%= f.radio_button :gender, "female" %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
  <%= link_to "Facebookでログイン", "/auth/facebook" %>
</div>
</div>