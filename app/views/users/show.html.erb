<% provide(:title, @user.user_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.user_name %>
      </h1>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <%= render 'follow_form' if logged_in? %>
    </section>
    <%= @user.gender %>
    <%= @user.introduction %>
    <%= @user.phonenumber %>
    <%= @user.website %>
  </aside>
</div>